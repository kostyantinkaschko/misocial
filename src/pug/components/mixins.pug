mixin menu(mainMenu, colorTheme="light")
    .navigation
        a(href="#" class="logo")
            img(src="img/logo.svg" alt="logo misocial")
            p(class=colorTheme) misocial
        nav(class="nav")
            ul(class=colorTheme).menu
                for item in mainMenu 
                    li  
                        a(href=item[1] class=colorTheme) #{item[0]}
            a(href="javascript:void(0);" class="exit none")   
            p(class=colorTheme class="last-button")
                a(href="javascript:void(0);" class=colorTheme) get started
        a(href="javascript:void(0);" class=colorTheme class="burger-menu") 


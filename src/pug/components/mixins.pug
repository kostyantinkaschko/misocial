mixin card(oneCard)
    figure.card-figure 
        figcaption 
            .img-wrapper 
                img(src=oneCard.img, alt=oneCard.alt class="img") 
            p.personal #{oneCard.personal}   
            p.price 
                span.a-price 
                    sup.currency #{oneCard.currensy}
                    span.number #{oneCard.price}
                    span.b-price
                        if oneCard.isMonth
                            | /month
                        else
                            | /year
                ul.description
                    for onetext in oneCard.description 
                        li #{onetext}
                a(href=oneCard.href) #{oneCard.btnText}